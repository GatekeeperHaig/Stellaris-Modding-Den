## GEOTIDAL PLANET CLASSES (aka Tidally-locked planets)

#Geotidal Class
entity = {
    name = "geotidal_planet_01_entity"
 
    locator = { name = "tiltLoc" position = { 0 0 0 } rotation = { 0 95 0 }}
 
    default_state = "idle"
	playback_rate = 1.0 # Animation speed 0
    state = { name = "idle" time_offset = { 15 0 } animation_speed = 0 }

    attach = { "tiltLoc" = "geotidal_planet_mesh"}
	
	scale = 1.0

}
entity = {
    name = "geotidal_planet_mesh"
    pdxmesh = "planet_clouded_mesh"
     
    meshsettings = {
    name = "planet_geosphereShape"
    texture_diffuse = "_gd_geotidal_01_diffuse.dds"
    texture_normal = "clouds_medium_inverted_normal.dds"
    texture_specular = "_gd_geotidal_01_specular.dds"
    }
	
	##cloud texture override
	meshsettings = {
		name = "clouds_geosphereShape"
		texture_diffuse = "atmosphere_optimal.dds"
		texture_normal = "nonormal.dds"
		texture_specular = "atmosphere_specular.dds"
	}
	
	##cloud shadow texture override
	meshsettings = {
		name = "clouds_shadow_geosphereShape"
		texture_diffuse = "atmosphere_shadow.dds"
		texture_normal = "nonormal.dds"
		texture_specular = "atmosphere_specular.dds"
	}
	
	##pole texture override
	meshsettings = {
	name = "polesShape"
	texture_diffuse = "nopoles_1_diffuse.dds"
	texture_normal = "nonormal.dds"
	texture_specular = "nospec.dds"
	}
	
	default_state = "idle"
	playback_rate = 1.0 # Animation speed 0
	state = { name = "idle" animation = "idle" time_offset = { 15 0 } animation_speed = 0
		start_event = { trigger_once = yes sound = { soundeffect = "amb_planet_class" } }
		start_event = { trigger_once = yes sound = { soundeffect = "amb_planet_class_02" } }
	}
	
}
