utility_component_template = {
	key = "SCIENCE_SHIP_SHIELD_RECHARGER_1"
	size = aux
	icon = "GFX_ship_part_shield_recharger_1"
	icon_frame = 1
	power = @science_ship_power_usage_shield_recharger_tier_1
	cost = @science_ship_cost_shield_recharger_tier_1
	#armor_value = @science_ship_shield_recharger_tier_1
	component_set = "auxiliary_components"
	upgrades_to = "SCIENCE_SHIP_SHIELD_RECHARGER_2"
	class_restriction = { shipclass_science_ship }
	ship_modifier = { ship_shield_regen_add = @science_ship_shield_regen_add_tier_1 }
	ai_weight = { weight = @weight_1 }
}

